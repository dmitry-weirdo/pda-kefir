<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jboss-web PUBLIC "-//JBoss//DTD Web Application 4.2//EN"
        "http://www.jboss.org/j2ee/dtd/jboss-web_4_2.dtd">
<jboss-web>
	<context-root>kefirSample</context-root>

	<use-session-cookies>true</use-session-cookies>

	<ejb-local-ref>
		<ejb-ref-name>ejb/DynamicGridService</ejb-ref-name>
		<local-jndi-name>DynamicGridServiceBean/local</local-jndi-name>
	</ejb-local-ref>
	<ejb-local-ref>
		<ejb-ref-name>ejb/AttachmentService</ejb-ref-name>
		<local-jndi-name>AttachmentServiceBean/local</local-jndi-name>
	</ejb-local-ref>

	<ejb-local-ref>
		<ejb-ref-name>ejb/TestService</ejb-ref-name>
		<local-jndi-name>TestServiceBean/local</local-jndi-name>
	</ejb-local-ref>
	<!-- ${APPEND_EJB_LOCAL_REFERENCE} -->

</jboss-web>